<Window x:Class="StoreApp.Core.Views.Views.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Height="600" Width="1000">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1">
            <ListBox Width="200">
                <ListBoxItem Content="HOME" ></ListBoxItem>
                <ListBoxItem Content="BOOKS"></ListBoxItem>
                <ListBoxItem Content="GAMES"></ListBoxItem>
                <ListBoxItem Content="EMPLOYEES"></ListBoxItem>
                <ListBoxItem Content="SCHEDULING"></ListBoxItem>
                <ListBoxItem Content="OTHER TAB"></ListBoxItem>
                <ListBoxItem Content="OTHER TAB"></ListBoxItem>
                <ListBoxItem Content="OTHER TAB"></ListBoxItem>
                <ListBoxItem Content="OTHER TAB"></ListBoxItem>
                <ListBoxItem Content="OTHER TAB"></ListBoxItem>
            </ListBox>
            <Button x:Name="menuButton" HorizontalAlignment="Left" Height="30" 
            	Margin="-20,2,0,0" VerticalAlignment="Top" Width="30" >
                <Image Source="Images/menu.png"/>
            </Button>
        </StackPanel>
       
    </Grid>
</Window>
